 <filter>
    <filter-name>loginFilter</filter-name>
    <filter-class>filters.LoginFilter</filter-class>
  </filter>
  
  <filter-mapping>
    <filter-name>loginFilter</filter-name>
    <url-pattern>/back-end/backendIndex.jsp</url-pattern>
    <url-pattern>/back-end/emp/*</url-pattern>
    <url-pattern>/back-end/auth/*</url-pattern>
    <url-pattern>/back-end/ad/*</url-pattern>
    <url-pattern>/back-end/live_report/*</url-pattern>
    <url-pattern>/back-end/liveManagement/*</url-pattern>
    <url-pattern>/back-end/product/*</url-pattern>
    <url-pattern>/back-end/product_report/*</url-pattern>
    <url-pattern>/back-end/product_type/*</url-pattern>
    <url-pattern>/back-end/productManagement/*</url-pattern>
    <dispatcher>REQUEST</dispatcher>
    <dispatcher>FORWARD</dispatcher>
    <dispatcher>INCLUDE</dispatcher>
    <dispatcher>ERROR</dispatcher>
    <dispatcher>ASYNC</dispatcher>
  </filter-mapping>
  
  <filter>
